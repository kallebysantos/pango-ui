<div class="flex flex-col gap-9 items-center">
  <label class="w-full flex flex-col gap-1">
    <span class="text-sm font-medium">
      Editable
    </span>
    <Input @bind-Value=@(Text) placeholder="write something here" />
  </label>

  <label class="w-full flex flex-col gap-1">
    <span class="text-sm font-medium">
      Readonly
    </span>
    <Input Value=@(Text) ReadOnly placeholder="nothing here" />
  </label>

  <label class="w-full flex flex-col gap-1">
    <span class="text-sm font-medium">
      Disabled
    </span>
    <Input Value=@(Text) ReadOnly disabled placeholder="nothing here" />
  </label>
</div>

@code {
  string Text = "We all love pango";
}
